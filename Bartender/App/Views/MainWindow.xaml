<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bartender2"
        xmlns:Properties="clr-namespace:Bartender2.Properties" x:Class="Bartender2.MainWindow"
        xmlns:views="clr-namespace:Bartender2.App.Views.SubViews"
        mc:Ignorable="d"
        Title="MainWindow" Background="#FF2A2D32" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Window.Resources>
        <DataTemplate x:Name="MenuModelView" DataType="{x:Type views:Menu}">
            <views:Menu DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="ParametersModelView" DataType="{x:Type views:Parameters}">
            <views:Parameters DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding}"></ContentControl>
    </Grid>

</Window>
